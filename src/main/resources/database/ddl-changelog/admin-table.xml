<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="0" author="alishev.neil">
        <createTable tableName="admin">
            <column name="id" type="int8"/>
            <column name="email" type="varchar(100)"/>
            <column name="password" type="varchar(100)"/>
            <column name="role" type="varchar(50)"/>
        </createTable>
    </changeSet>

    <changeSet id="1" author="alishev.neil">
        <addPrimaryKey tableName="admin" columnNames="id"/>
    </changeSet>

    <changeSet id="2" author="alishev.neil">
        <createSequence sequenceName="admin_seq"
                        schemaName="public" startValue="1" incrementBy="1"/>
    </changeSet>

    <changeSet id="3" author="alishev.neil">
        <addNotNullConstraint tableName="admin" columnName="email"/>
        <addNotNullConstraint tableName="admin" columnName="password"/>
        <addNotNullConstraint tableName="admin" columnName="role"/>
    </changeSet>

</databaseChangeLog>